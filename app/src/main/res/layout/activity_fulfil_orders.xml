<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shrmn.is416.tumpang.FulfilOrdersActivity">

    <TextView
        android:id="@+id/fulfil_orders_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fulfil Orders"
        android:textColor="@color/colorTextHeading"
        android:textSize="30dp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="parent" />

    <ListView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fulfil_orders_listView"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/fulfil_orders_header" />

    <Button
        android:id="@+id/btn_toAcceptedOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToFulfilAcceptedOrders"
        android:background="@color/colorButton"
        android:text="View Accepted Orders"
        android:textSize="20dp"
        android:layout_margin="20sp"
        android:textColor="@color/colorButtonText"
        app:layout_constraintBottom_toTopOf="@id/back_btn"/>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="finishActivity"
        android:text="Back"
        android:background="@color/colorButton"
        android:textColor="@color/colorButtonText"
        android:layout_margin="20sp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
